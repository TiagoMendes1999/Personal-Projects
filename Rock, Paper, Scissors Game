#include <iostream>
#include <stdlib.h>
#include <time.h>

using namespace std;

int main()
{
	srand(time(nullptr));
	int randomNumber = (rand() % 3) + 1;

	cout << "Please select Rock, Paper or Scissors." << endl;
	cout << "Rock = 1. Paper = 2. Scissors = 3." << endl;

	int userInput;
	cin >> userInput; 

	if (userInput == 1 && randomNumber == 3)
	{
		cout << "You win!" << endl;
	}
	else
	{
		cout << "You lost!" << endl;

	}
}
