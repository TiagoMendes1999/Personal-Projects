#include <iostream>

using namespace std;

int main()
{

	// Prompt user to enter temperature in celsius
	cout << "Please enter a temperature in celsius: ";


	// Get temperature 
	float celsius;
	cin >> celsius;


	// Convert the temperature to fahrenheit
	float fahrenheit = (celsius * 9.0f) / 5.0f + 32;


	// Display temp to user
	cout << celsius << " degrees celsius in fahrenheit is: " << fahrenheit << endl;


}
